# --- MongoDB ---
# For local Docker development:
# MONGO_URI="mongodb://mongo:27017/"
# For production (MongoDB Atlas):
MONGO_URI="mongodb+srv://<username>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority"
MONGO_DB_NAME="backend_v2"

# --- JWT Settings ---
# Generate a strong secret key (e.g., in PowerShell: -join ([char[]](65..90 + 97..122 + 48..57) | Get-Random -Count 50))
SECRET_KEY="your_strong_secret_key_here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Application Settings ---
DEFAULT_PROMPT_BUDGET=15
FRONTEND_URL="http://localhost:5173"
